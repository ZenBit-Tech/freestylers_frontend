{
    "extends": [
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
       "react/jsx-filename-extension": [
        1,
        {
            "extensions": [".tsx"]
        }
      ],
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function"
        }
      ]
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
    
}
